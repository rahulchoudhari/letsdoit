
pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                echo 'hello my name is Jenkins'
            }
        }
        stage('Setting permission script') {
            steps {
                sh "chmod 755 myscript.sh"
            }
        }
        stage(' Running script') {
            steps {
                sh "bash myscript.sh"
            }
        }
   }
}
